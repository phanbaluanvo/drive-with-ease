<!-- activity_booking.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCarDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Details"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Model: "
        android:layout_below="@id/textViewCarDetails"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewCarMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Make: "
        android:layout_below="@id/textViewCarModel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <!-- Add more text views for other details such as price per day, availability, etc. -->

    <Button
        android:id="@+id/buttonSelectDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Dates"
        android:layout_below="@id/textViewCarDetails"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/buttonBookCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Car"
        android:layout_below="@id/buttonSelectDates"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
